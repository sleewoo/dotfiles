
\set QUIET 1

\x auto
\encoding unicode
\timing on

\pset pager on
\pset null '¤'
\pset linestyle unicode
\pset border 2
-- \pset format wrapped

\set paste
\set PROMPT1 '\n%[%033[1;31m%]➤ %[%033[1;36m%]%n%[%033[34m%]@%[%033[1;36m%]%`hostname -s`%[%033[1;33m%]/%/ %[%033[1;31m%]%x %[%033[K%]%[%033[0m%]\n%[%033[1;33m%]%R%#%[%033[0m%] '
\set PROMPT2 ''
\set HISTCONTROL ignoreboth
\set HISTFILE ~/.psql_history/:DBNAME.sql
\set VERBOSITY verbose

\i ~/.config/psql.rc

\set QUIET 0

